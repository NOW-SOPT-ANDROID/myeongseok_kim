<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_item_home_feed_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="10dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_item_home_feed_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="10dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_item_home_feed_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="10dp" />

    <ImageView
        android:id="@+id/iv_home_feed"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/img_friends"
        app:layout_constraintStart_toEndOf="@id/gl_item_home_feed_start"
        app:layout_constraintTop_toBottomOf="@id/gl_item_home_feed_top" />

    <TextView
        android:id="@+id/tv_home_feed_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/iv_home_feed"
        app:layout_constraintStart_toEndOf="@id/iv_home_feed"
        app:layout_constraintTop_toTopOf="@id/iv_home_feed"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/tv_home_feed_mbti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_home_feed_name"
        app:layout_constraintEnd_toStartOf="@id/gl_item_home_feed_end"
        app:layout_constraintTop_toTopOf="@id/tv_home_feed_name"
        tools:text="@string/singUp_MBTI" />

</androidx.constraintlayout.widget.ConstraintLayout>