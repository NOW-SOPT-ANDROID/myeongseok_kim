<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_item_home_feed_me_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="10dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_item_home_feed_me_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="10dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_item_home_feed_me_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="10dp" />

    <ImageView
        android:id="@+id/iv_home_feed_me"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/img_me"
        app:layout_constraintStart_toEndOf="@id/gl_item_home_feed_me_start"
        app:layout_constraintTop_toBottomOf="@id/gl_item_home_feed_me_top" />

    <TextView
        android:id="@+id/tv_home_feed_me_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/iv_home_feed_me"
        app:layout_constraintStart_toEndOf="@id/iv_home_feed_me"
        app:layout_constraintTop_toTopOf="@id/iv_home_feed_me"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/tv_home_feed_me_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_home_feed_me_name"
        app:layout_constraintEnd_toStartOf="@id/gl_item_home_feed_me_end"
        app:layout_constraintTop_toTopOf="@id/tv_home_feed_me_name"
        tools:text="@string/all_number" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="4dp"
        android:background="@color/gray"
        app:layout_constraintEnd_toStartOf="@id/gl_item_home_feed_me_end"
        app:layout_constraintStart_toEndOf="@id/gl_item_home_feed_me_start"
        app:layout_constraintTop_toBottomOf="@id/iv_home_feed_me" />
</androidx.constraintlayout.widget.ConstraintLayout>